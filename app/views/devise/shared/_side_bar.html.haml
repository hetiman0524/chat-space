.chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name  
        = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
          =link_to new_group_path, class: "side-header__box__menu__new-group__icon" do
            %i.fa.fa-edit
          %li.side-header__box__menu__edit-header
          =link_to edit_user_path(current_user), class: "side-header__box__menu__edit-header__icon" do
            %i.fa.fa-cog
    .groups
     - current_user.groups.each do |group|
      .group
        = link_to '#',  do
          .group__name
            = group.name
          .group__message
